#controlHeader ($action $helper)
<h1>Rules Settings</h1>

<form class="aui" action="$req.contextPath/secure/UserPropertiesAction.jspa" method="post">
    <div class="field-group">
        <label for="info">Old Schema</label>
        <input type="text" id="info" name="info" style="resize:none; width: 50%; height: 30px; white-space: pre-wrap;"/>
    </div>
    <div class="field-group">
        <label for="ruleSchema">New Schema</label>
        <input type="text" id="ruleSchema" name="ruleSchema" style="resize:none; width: 50%; height: 30px; word-wrap: break-word;"/>
    </div>
    <div class="buttons-container">
        <input class="button" type="submit" value="Update Schema"/>
    </div>
</form>
#controlFooter ($action $helper)